{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,

    // ðŸ†• add these two lines
    "types": ["react", "react-dom"],
    "forceConsistentCasingInFileNames": true,

    "plugins": [{ "name": "next" }],

    "paths": {
      "@/*": ["./src/*"],
      "@admin/*": ["./src/lib/firebase-admin.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules", "functions", ".firebase", ".next"]
}
